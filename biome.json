{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "error"
      },
      "performance": {
        "noDelete": "off"
      }
    },
    "ignore": ["node_modules", ".next", "dist", ".contentalyer", ".cache"]
  },
  "formatter": {
    "enabled": false
  }
}
